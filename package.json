{
  "name": "infinity-viewer",
  "displayName": "infinity-viewer",
  "description": "",
  "version": "0.0.1",
  "keywords": [
    "Infinity Engine",
    "Baldur's Gate",
    "IE"
  ],
  "author": "dark0dave",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/dark0dave/infinity_viewer.git"
  },
  "bugs": {
    "url": "https://github.com/dark0dave/infinity_viewer/issues"
  },
  "engines": {
    "vscode": "^1.30.0"
  },
  "extensionKind": [
    "ui"
  ],
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCustomEditor:ie.preview"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "capabilities": {
      "untrustedWorkspaces": {
        "supported": true
      }
    },
    "customEditors": [
      {
        "viewType": "ie.preview",
        "displayName": "Infinity Preview",
        "selector": [
          {
            "filenamePattern": "*.cre"
          }
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Infinity Preview",
      "properties": {
        "pdf-preview.default.cursor": {
          "markdownDescription": "The default cursor tool for preview.",
          "type": "string",
          "default": "select",
          "enum": [
            "select",
            "hand"
          ]
        },
        "pdf-preview.default.scale": {
          "markdownDescription": "The default zoom level for preview. Allowed values are `auto`, `page-actual`, `page-fit`, `page-width`, and 1-based scale values. (`1.0` means 100%)",
          "type": "string",
          "default": "auto",
          "pattern": "^(\\d+(?:\\.\\d+)?|auto|page-actual|page-fit|page-width)$"
        },
        "pdf-preview.default.sidebar": {
          "markdownDescription": "Show the sidebar on load. The default visibility of sidebar for preview.",
          "type": "boolean",
          "default": false
        },
        "pdf-preview.default.scrollMode": {
          "markdownDescription": "The default scroll mode for preview.",
          "type": "string",
          "default": "vertical",
          "enum": [
            "vertical",
            "horizontal",
            "wrapped"
          ]
        },
        "pdf-preview.default.spreadMode": {
          "markdownDescription": "The default spread mode for preview.",
          "type": "string",
          "default": "none",
          "enum": [
            "none",
            "odd",
            "even"
          ]
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "vscode:prepublish": "npm run compile",
    "build": "vsce package",
    "watch": "tsc -watch -p ./",
    "lint": "prettier -w src"
  },
  "dependencies": {
    "binary-parser": "^2.2.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.10",
    "@types/vscode": "^1.30.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^2.29.0",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3"
  }
}
