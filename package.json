{
  "name": "infinity-viewer",
  "displayName": "infinity-viewer",
  "description": "Infinity Viewer lets you view infinity engine binary files as json",
  "version": "0.9.6",
  "keywords": [
    "Infinity Engine",
    "Baldur's Gate",
    "IE"
  ],
  "icon": "icon.png",
  "author": "dark0dave",
  "publisher": "dark0dave",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/dark0dave/infinity_viewer.git"
  },
  "bugs": {
    "url": "https://github.com/dark0dave/infinity_viewer/issues"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "extensionKind": [
    "ui"
  ],
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "capabilities": {
      "untrustedWorkspaces": {
        "supported": true
      }
    },
    "customEditors": [
      {
        "viewType": "ie.preview",
        "displayName": "Infinity Preview",
        "selector": [
          {
            "filenamePattern": "*.are"
          },
          {
            "filenamePattern": "*.ARE"
          },
          {
            "filenamePattern": "*.bam"
          },
          {
            "filenamePattern": "*.BAM"
          },
          {
            "filenamePattern": "*.bif"
          },
          {
            "filenamePattern": "*.BIF"
          },
          {
            "filenamePattern": "*.cre"
          },
          {
            "filenamePattern": "*.CRE"
          },
          {
            "filenamePattern": "*.dlg"
          },
          {
            "filenamePattern": "*.DLG"
          },
          {
            "filenamePattern": "*.eff"
          },
          {
            "filenamePattern": "*.EFF"
          },
          {
            "filenamePattern": "*.itm"
          },
          {
            "filenamePattern": "*.ITM"
          },
          {
            "filenamePattern": "*.key"
          },
          {
            "filenamePattern": "*.KEY"
          },
          {
            "filenamePattern": "*.sto"
          },
          {
            "filenamePattern": "*.STO"
          },
          {
            "filenamePattern": "*.spl"
          },
          {
            "filenamePattern": "*.SPL"
          },
          {
            "filenamePattern": "*.tlk"
          },
          {
            "filenamePattern": "*.TLK"
          },
          {
            "filenamePattern": "*.vvc"
          },
          {
            "filenamePattern": "*.VVC"
          }
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "infinity-viewer",
      "properties": {
        "default.font.size": {
          "type": "number",
          "default": 100,
          "description": "Specifies default font size (100%)"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p ./",
    "compile": "tsc -p ./",
    "vscode:prepublish": "npm run compile",
    "package": "rm -f infinity-viewer-*.vsix && vsce package",
    "deploy": "vsce publish",
    "test": "npm run package && vscode-test",
    "watch": "tsc -watch -p ./",
    "lint": "prettier -w ."
  },
  "dependencies": {
    "binary-parser": "^2.2.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.24",
    "@types/vscode": "^1.80.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.2",
    "mocha": "^11.2.2",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  }
}
